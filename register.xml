<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D4F53"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#A145DA"
        android:text="@string/tienda_onile"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="82dp"
        app:layout_editor_absoluteY="46dp"
        android:fontFamily="sans-serif-black"
        />

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="#A145DA"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        tools:ignore="MissingConstraints" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="316dp"
        android:layout_height="470dp"
        app:cardBackgroundColor="#D7D7D7"
        android:layout_marginTop="152dp"
        app:cardCornerRadius="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textcorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="100dp"
            android:hint="@string/correo1"
            android:shadowRadius="5"
            android:text="@string/correo_electronico1"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cardCornerRadius="37dp"
            />

        <TextView
            android:id="@+id/textcontra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="210dp"
            android:hint="@string/correo"
            android:shadowRadius="5"
            android:text="@string/contrase_a"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cardCornerRadius="37dp"
            />

        <TextView
            android:id="@+id/textInicio"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/registrate"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="240dp"
            android:autofillHints=""
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="@string/clave"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="130dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="@string/ejemplo_ejemplo_com"
            android:inputType="textEmailAddress"
            app:cardCornerRadius="37dp" />

        <Button
            android:id="@+id/Iniciobtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="410dp"
            android:gravity="center"
            android:text="@string/iniciar"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="160dp"
            android:text="nombre"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="10dp"
            android:text="apellido"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="190dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="text"
            android:text="" />




        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="text"
            android:text="" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/register1"
        android:layout_width="448dp"
        android:layout_height="41dp"
        android:background="#B3DEAC"
        android:text="tienes una cuenta"
        android:textColor="#1D780F"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="75dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/yatengocta"
        android:layout_width="108dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:text="@string/iniciar_sesi_n"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="303dp"
        tools:layout_editor_absoluteY="80dp"
        tools:ignore="MissingConstraints,SmallSp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/white"
        android:text="@string/n_mero_de_los_contactos_56_9_1234_5678_56_2_2214_2456"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


        

</androidx.constraintlayout.widget.ConstraintLayout>